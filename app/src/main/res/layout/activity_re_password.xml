<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/repastex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="修改密码"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"/>
    <EditText
        android:id="@+id/repasedt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repastex"
        android:hint="输入账号"
        android:inputType="text"/>
    <EditText
        android:id="@+id/repasedt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repasedt1"
        android:hint="原密码"
        android:inputType="text"/>

    <EditText
        android:id="@+id/repasedt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repasedt2"
        android:hint="新密码"
        android:inputType="text"/>

<Button
    android:id="@+id/repasbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/repasedt3"
    android:text="确认修改"
    android:textSize="20dp"
    android:textColor="@color/colorBlack"
    />
</RelativeLayout>
