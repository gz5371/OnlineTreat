<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/mestex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完善信息"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"/>
<EditText
    android:id="@+id/mesedt1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="账号"
    android:layout_marginTop="50dp"
    android:layout_below="@id/mestex"
    android:inputType="text"/>
    <EditText
        android:id="@+id/mesedt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="昵称"
        android:layout_below="@id/mesedt1"
        android:layout_marginTop="10dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/mesedt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="性别"
        android:layout_below="@id/mesedt2"
        android:layout_marginTop="10dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/mesedt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="年龄"
        android:layout_below="@id/mesedt3"
        android:layout_marginTop="10dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/mesedt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱"
        android:layout_below="@id/mesedt4"
        android:layout_marginTop="10dp"
        android:inputType="text"/>
  <Button
      android:id="@+id/mesbtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/mesedt5"
      android:text="确认"
      android:layout_marginTop="10dp"
      android:background="@drawable/medbtn"/>
</RelativeLayout>