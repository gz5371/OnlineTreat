<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/message_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Greencolor"
        android:theme="@style/AppTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:paddingTop="14dp"
        />
<ImageButton
    android:id="@+id/myimgbtn_1"
    android:layout_width="380dp"
    android:layout_height="180dp"
    android:layout_below="@id/message_toolbar"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:src="@mipmap/zhaoyisheng"
    />
    <ImageButton
        android:id="@+id/myimgbtn_2"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@id/myimgbtn_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/yao"
        />
    <ImageButton
        android:id="@+id/myimgbtn_3"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@id/myimgbtn_1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="190dp"
        android:src="@mipmap/zhengzhuang"
        />
    <ImageButton
        android:id="@+id/myimgbtn_4"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@id/myimgbtn_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/jibing"

        />
    <ImageButton
        android:id="@+id/myimgbtn_5"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@id/myimgbtn_2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="190dp"
        android:src="@mipmap/jiankang"
        />
</RelativeLayout>