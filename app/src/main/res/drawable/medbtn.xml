<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/Gray2"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:useLevel="false">
            <solid android:color="@null" />
            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" />
            <stroke android:width="1dip" android:color="@color/colorWhite" /> <!--边框宽度-->
            <size android:width="15dip" android:height="15dip" /> <!--边框-->
        </shape>
    </item>

</selector>
